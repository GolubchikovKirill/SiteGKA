{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "InfraScope Service Descriptor",
  "type": "object",
  "required": [
    "name",
    "display_name",
    "kind",
    "runtime",
    "observability"
  ],
  "properties": {
    "name": {
      "type": "string",
      "pattern": "^[a-z0-9][a-z0-9-]*$"
    },
    "display_name": {
      "type": "string",
      "minLength": 1
    },
    "kind": {
      "type": "string",
      "enum": ["gateway", "service", "worker", "infra"]
    },
    "owner": {
      "type": "string"
    },
    "compose_service": {
      "type": "string"
    },
    "runtime": {
      "type": "object",
      "required": ["language"],
      "properties": {
        "language": {
          "type": "string",
          "enum": ["python", "node", "other"]
        },
        "module": {
          "type": "string"
        },
        "entrypoint": {
          "type": "string"
        },
        "port": {
          "type": ["integer", "null"],
          "minimum": 1,
          "maximum": 65535
        }
      },
      "additionalProperties": false
    },
    "observability": {
      "type": "object",
      "required": ["health_path", "metrics_path"],
      "properties": {
        "prometheus_job": {
          "type": "string"
        },
        "health_path": {
          "type": "string"
        },
        "metrics_path": {
          "type": "string"
        },
        "service_map_enabled": {
          "type": "boolean",
          "default": true
        }
      },
      "additionalProperties": false
    },
    "dependencies": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["target"],
        "properties": {
          "target": {"type": "string"},
          "transport": {"type": "string", "enum": ["http", "kafka", "redis", "db", "other"]},
          "operation": {"type": "string"}
        },
        "additionalProperties": false
      }
    },
    "k8s": {
      "type": "object",
      "properties": {
        "enabled": {"type": "boolean"},
        "replicas": {"type": "integer", "minimum": 1},
        "resources_profile": {"type": "string", "enum": ["small", "medium", "large"]},
        "ingress_enabled": {"type": "boolean"}
      },
      "additionalProperties": false
    },
    "ci": {
      "type": "object",
      "properties": {
        "lint_command": {"type": "string"},
        "test_command": {"type": "string"},
        "build_context": {"type": "string"},
        "dockerfile": {"type": "string"}
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
